public class Solution {
    public static void main(String[] args) {
        
        Scanner sc = new Scanner(System.in);
        String A = sc.next();
        
        int mid = A.length() / 2;
        
        for (int i = 0; i < mid; i++) {
            if (A.charAt(i) != A.charAt(A.length() - 1 - i)) {
                System.out.println("No");
                return;
            }
        }
        
        System.out.println("Yes");
    }
}

